@model Company.Project.Web.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-sm-around align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-x-1">
                <div style="color: #3b71ca">
                    <h1 class="font-weight-bold">Login</h1>
                </div>
                <hr />
                <div class="row">
                    <div class="container">
                        <form asp-action="Login">
                            <div class="row d-flex justify-content-center align-items-center h-100">
                                <p class="lead fw-normal mb-0 me-3">Sign in with</p>
                                <button type="button" class="btn btn-primary btn-floating mx-1" style="border-radius:10px">
                                    <i class="fab fa-facebook-f"></i>
                                </button>

                                <button type="button" class="btn btn-primary btn-floating mx-1" style="border-radius:10px">
                                    <i class="fab fa-twitter"></i>
                                </button>

                                <button type="button" class="btn btn-primary btn-floating mx-1" style="border-radius:10px">
                                    <i class="fab fa-linkedin-in"></i>
                                </button>
                            </div>

                            <div class="row d-flex justify-content-center align-items-center h-100" style="padding-top: 30px">
                                <p class="text-center fw-bold mx-3 mb-0">Or</p>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="userName" class="control-label text-dark font-weight-bold"></label>
                                <input asp-for="userName" class="form-control input-sm" placeholder="Username..." />
                                <span asp-validation-for="userName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="password" class="control-label text-dark font-weight-bold"></label>
                                <input asp-for="password" class="form-control input-sm" placeholder="Password..." />
                                <span asp-validation-for="password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary btn-lg btn-block" />
                            </div>
                        </form>
                        <div>
                            <p class="text-dark font-weight-bold"> Click <a asp-controller="Account" asp-action="SignUp">here</a> to Sign Up</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>









